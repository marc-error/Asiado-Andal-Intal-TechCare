    <style>



      /* FAQ-specific styles updated to use the site's shared CSS variables so .dark toggling works */
      *{box-sizing:border-box}
      body{font-family:Inter, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial; background:var(--background,#f7fbff); color:var(--foreground,#071133); margin:0; -webkit-font-smoothing:antialiased;}
      /* IMPORTANT: keep container sizing consistent with the rest of the site so header/logo aligns the same */
      .container{max-width:1200px; margin:0 auto; padding:0 1rem;}

      /* HERO */
      .faq-hero {
        padding:5.2rem 0 3.2rem;
        background: linear-gradient(135deg, rgba(37,99,235,0.06) 0%, transparent 100%);
        text-align:center;
      }
      .faq-hero h1 { margin:0 0 .6rem; font-size:2.1rem; line-height:1.05; }
      .faq-hero p { margin:0 auto 1.4rem; color:var(--muted-foreground,#6b7280); max-width:68ch; font-size:1.03rem; }

      .faq-search { max-width:820px; margin:0 auto; position:relative; }
      .faq-search svg { position:absolute; left:1rem; top:50%; transform:translateY(-50%); color:var(--muted-foreground,#9ca3af); }
      .faq-search input {
        width:100%;
        height:52px;
        padding:0 1rem 0 3.6rem;
        border-radius:12px;
        border:1px solid var(--card-border,#e6eef7);
        background:var(--card,#fff);
        box-shadow:var(--shadow-sm, 0 6px 18px rgba(16,24,40,0.06));
        font-size:1rem;
        color:var(--foreground,#071133);
        outline:none;
      }
      .faq-search input::placeholder { color:var(--muted-foreground,#9ca3af); }

      /* LAYOUT */
      .faq-content { padding:3.25rem 0 5rem; }
      .faq-grid { display:grid; grid-template-columns: 1fr; gap:1.25rem; align-items:start; }
      @media(min-width:980px){ .faq-grid { grid-template-columns: 1fr 380px; gap:1.5rem; } }

      /* FAQ LIST */
      .faq-list { display:flex; flex-direction:column; gap:1rem; }
      .faq-item {
        background:var(--card,#fff);
        border:1px solid var(--card-border,#e6eef7);
        border-radius:12px;
        overflow:hidden;
        box-shadow:var(--shadow-sm, 0 6px 18px rgba(16,24,40,0.06));
        transition:transform .16s ease, box-shadow .16s ease;
      }
      .faq-item:hover{ transform:translateY(-4px); box-shadow: 0 14px 34px rgba(15,23,42,0.08); }

      .faq-question {
        padding:1.25rem 1.25rem;
        display:flex;
        gap:1rem;
        align-items:flex-start;
        cursor:pointer;
        user-select:none;
        background:transparent;
      }
      .faq-question .q-main { flex:1; }
      .q-text { font-weight:700; font-size:1.05rem; color:var(--foreground,#071133); margin-bottom:.18rem; }
      .q-meta { color:var(--muted-foreground,#6b7280); font-size:.88rem; }
      .faq-question svg { flex-shrink:0; margin-left:auto; color:var(--muted-foreground,#9ca3af); transition: transform .22s ease; }

      .faq-tags { margin-top:.5rem; display:flex; gap:.5rem; flex-wrap:wrap; }
      .faq-tag { background:rgba(15,23,42,0.03); color:var(--muted-foreground,#9ca3af); padding:.18rem .5rem; border-radius:8px; font-size:.82rem; }

      .faq-item.active .faq-question svg { transform: rotate(180deg); color:var(--primary,#2563eb); }
      .faq-item.active { border-color: rgba(37,99,235,0.12); }

      /* ANSWER - allow much larger expansion and use adaptive gradient instead of a fixed white one */
      .faq-answer {
        /* force CSS control over height so it won't be clipped when JS sets inline maxHeight */
        max-height: 0 !important;
        overflow: hidden;
        transition: max-height .36s ease, padding .2s ease;
        padding: 0 1.25rem;
        border-top: 1px solid var(--card-border,#e6eef7);
        /* subtle overlay that adapts for light/dark via override below */
        background: linear-gradient(180deg, transparent, rgba(0,0,0,0.03));
      }
      /* make the overlay lighter in dark mode */
      .dark .faq-answer {
        background: linear-gradient(180deg, transparent, rgba(255,255,255,0.02));
      }
      /* make active state expand fully (big enough for long answers) and set padding */
      .faq-item.active .faq-answer {
        max-height: 2000px !important;
        padding: 1rem 1.25rem 1.25rem;
      }

      .faq-answer-content { color:var(--muted-foreground,#6b7280); font-size:1rem; line-height:1.6; }
      .faq-answer-content p { margin:.45rem 0; }
      .faq-answer-content ul { margin:.4rem 0 0 1.2rem; }
      .faq-answer-content ol { margin:.4rem 0 0 1.2rem; }
      .faq-answer-content code { background:rgba(15,23,42,0.04); padding:.08rem .28rem; border-radius:4px; font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, "Roboto Mono", monospace; font-size:.95rem; }

      .answer-footer { margin-top:.9rem; display:flex; gap:.8rem; align-items:center; flex-wrap:wrap; }
      .badge { background: #eef6ff; color:var(--primary,#2563eb); padding:.28rem .6rem; border-radius:999px; font-weight:700; font-size:.85rem; }

      /* SIDEBAR */
      .faq-side { display:flex; flex-direction:column; gap:1rem; position:sticky; top:92px; }
      .card { background:var(--card,#fff); border:1px solid var(--card-border,#e6eef7); padding:1rem; border-radius:10px; box-shadow:var(--shadow-sm, 0 6px 18px rgba(16,24,40,0.06)); }
      .card h4 { margin:0 0 .6rem; font-size:1rem; }
      .contact-list a { color:var(--primary,#2563eb); font-weight:600; text-decoration:none; }

      .no-results { padding:1.5rem; text-align:center; background:var(--card,#fff); border:1px solid var(--card-border,#e6eef7); border-radius:10px; color:var(--muted-foreground,#9ca3af); box-shadow:var(--shadow-sm, 0 6px 18px rgba(16,24,40,0.06)); }

      @media(max-width:540px){
        .faq-search input{ height:48px; padding-left:3.2rem; }
        .faq-question { padding:1rem; }
        .faq-side { position:static; top:auto; }
      }
    </style>
</head>
