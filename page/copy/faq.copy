      (function() {
        try {
          var theme = localStorage.getItem('theme');
          if (theme === 'dark') document.documentElement.classList.add('dark');
          // prevent transition flashes while CSS is applied
          document.documentElement.classList.add('no-transition');
          // safety remove after a short delay in case the rest of the page doesn't remove it
          setTimeout(function(){ document.documentElement.classList.remove('no-transition'); }, 120);
        } catch (e) { /* silent */ }
